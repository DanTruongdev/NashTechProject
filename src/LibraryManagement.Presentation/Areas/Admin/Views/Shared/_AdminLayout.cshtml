@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin - @ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">

    <link rel="stylesheet" href="/lib/admin/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/admin/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/lib/admin/themify-icons/css/themify-icons.css">
    <link rel="stylesheet" href="/lib/admin/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="/lib/admin/selectFX/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="/lib/admin/jqvmap/dist/jqvmap.min.css">
    <link rel="stylesheet" href="/css/admin/style.css">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

</head>

<body>
    <!-- Left Panel -->

    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">

            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" asp-area="Admin" asp-controller="Admin" asp-action="Index"><img width="50" src="/images/favicon.png" alt="Logo"></a>
                <a class="navbar-brand hidden" href="./"><img src="/images/favicon.png" alt="Logo"></a>
            </div>

            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="Index"> <i class="menu-icon fa fa-dashboard"></i>Dashboard </a>
                    </li>
                    @{
                        Dictionary<string, string> param = new Dictionary<string, string>();
                        param.Add("searchString", "");

                    }
                    <h3 class="menu-title">Account</h3><!-- /.menu-title -->
                    <li class="active">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="GetAllUsers" asp-all-route-data="param">
                            <i class="menu-icon fa fa-user"></i>
                            Users
                        </a>
                    </li>

                    <h3 class="menu-title">Library</h3>
                    
                    <li class="active">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="GetAllBooks" asp-all-route-data="param">
                            <i class="menu-icon fa fa-table"></i>
                            Books
                        </a>
                    </li>

                    <li class="active">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="GetAllCategories" asp-all-route-data="param">
                            <i class="menu-icon fa fa-table"></i>
                            Categories
                        </a>
                    </li>

                    <li class="active">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="GetAllAuthors" asp-all-route-data="param">
                            <i class="menu-icon fa fa-table"></i>
                            Authors
                        </a>
                    </li>
                    <h3 class="menu-title">Pages</h3>
                    <li class="active">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="Logout">
                            <i class="menu-icon fa fa-sign-in"></i>
                            Logout
                        </a>
                    </li>
                    
                   
                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
    </aside><!-- /#left-panel -->
    <!-- Left Panel -->
    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <header id="header" class="header">
            <div class="header-menu">
                <div class="col-sm-7">
                    <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                </div>

                <div class="col-sm-5">
                    <div class="user-area dropdown float-right">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </header><!-- /header -->
        <!-- Header-->
        @RenderBody();
        <script src="/lib/admin/jquery/dist/jquery.min.js"></script>
        <script src="/lib/admin/popper.js/dist/umd/popper.min.js"></script>
        <script src="/lib/admin/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="/js/admin/main.js"></script>
        <script src="/lib/admin/chart.js/dist/Chart.bundle.min.js"></script>
        <script src="/js/admin/js/dashboard.js"></script>
        <script src="/js/admin/js/widgets.js"></script>
        <script src="/lib/admin/jqvmap/dist/jquery.vmap.min.js"></script>
        <script src="/lib/admin/jqvmap/examples/js/jquery.vmap.sampledata.js"></script>
        <script src="/lib/admin/jqvmap/dist/maps/jquery.vmap.world.js"></script>
       
        @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
